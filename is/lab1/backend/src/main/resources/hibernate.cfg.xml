<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/test</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">KosPrav1979</property>

        
        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        
        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        
        <!-- Drop and re-create the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- Enable second-level cache -->
        <property name="hibernate.cache.use_second_level_cache">true</property>
        <property name="hibernate.cache.region.factory_class">org.hibernate.cache.jcache.JCacheRegionFactory</property>
        <property name="hibernate.javax.cache.provider">org.ehcache.jsr107.EhcacheCachingProvider</property>
        <property name="hibernate.javax.cache.uri">ehcache.xml</property>
        
        <!-- Enable query cache -->
        <property name="hibernate.cache.use_query_cache">true</property>
        
        <!-- Generate statistics for cache monitoring -->
        <property name="hibernate.generate_statistics">true</property>
        
        <!-- ИЗМЕНЕНО: Использовать thread-local сессии вместо JTA -->
        <property name="hibernate.current_session_context_class">thread</property>
        
        <!-- ИЗМЕНЕНО: Использовать JDBC транзакции вместо JTA -->
        <property name="hibernate.transaction.coordinator_class">jdbc</property>
        
        <!-- Connection pool settings using Apache Commons DBCP2 -->
        <!-- Hibernate 6 использует встроенный connection provider -->
        <property name="hibernate.connection.pool_size">20</property>
        
        <!-- DBCP2 DataSource настройки (для продакшена лучше использовать JNDI) -->
        <!-- Для development используем базовый пул Hibernate с оптимизированными параметрами -->
        <property name="hibernate.connection.autocommit">false</property>
        <property name="hibernate.connection.isolation">2</property>
        
        <!-- Mapping files -->
        <mapping resource="org/example/entity/Coordinates.hbm.xml"/>
        <mapping resource="org/example/entity/Vehicle.hbm.xml"/>
        <mapping resource="org/example/entity/User.hbm.xml"/>
        <mapping resource="org/example/entity/ImportOperation.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
